    <parent>
        <groupId>org.apache.camel.forage</groupId>
        <artifactId>tests</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>forage-memory-tests-tck</artifactId>
    <packaging>jar</packaging>
    <name>Camel Forage :: Library :: AI :: Chat Memory :: Tests :: TCK</name>
    <description>Technology Compatibility Kit for testing chat memory implementations</description>

    <dependencies>
        <dependency>
            <groupId>org.apache.camel.forage</groupId>
            <artifactId>forage-core-ai</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>dev.langchain4j</groupId>
            <artifactId>langchain4j</artifactId>
        </dependency>

        <!-- Test dependencies - compile scope since this is a TCK module -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
        </dependency>

        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
        </dependency>

        <!-- Memory implementations to test -->
        <dependency>
            <groupId>org.apache.camel.forage</groupId>
            <artifactId>forage-memory-message-window</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.camel.forage</groupId>
            <artifactId>forage-memory-redis</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.camel.forage</groupId>
            <artifactId>forage-memory-infinispan</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- Testcontainers for Redis and Infinispan testing -->
        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>testcontainers</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

</project>